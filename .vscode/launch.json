    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "runtimeVersion": "18.17.0",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            // "program": "${workspaceFolder}/dist/index.js",
            "program": "${workspaceFolder}/bin/server.js",
            "args": [
                "start"
            ],
            "env": {
                // "SOKETI_DEBUG": "1"
            },
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ]
        }
    ]
}